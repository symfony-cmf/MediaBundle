<?xml version="1.0" encoding="UTF-8"?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="cmf_media.serializer.handler.class">Symfony\Cmf\Bundle\MediaBundle\Serializer\Handler</parameter>
    </parameters>

    <services>
        <service id="cmf_media.serializer.handler" class="%cmf_media.serializer.handler.class%" public="true">
            <tag name="jms_serializer.handler" type="%cmf_media.image_class%" direction="serialization" format="json" method="serializeImageToJson" />
            <argument type="service" id="cmf_media.manager" />
            <argument type="service" id="router" />
        </service>
    </services>

</container>
