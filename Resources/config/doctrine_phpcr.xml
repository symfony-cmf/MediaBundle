<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="cmf_media.download_controller.class">Symfony\Cmf\Bundle\MediaBundle\Controller\PhpcrDownloadController</parameter>
        <parameter key="cmf_media.templating.helper.class">Symfony\Cmf\Bundle\MediaBundle\Templating\Helper\PhpcrMediaHelper</parameter>
    </parameters>

    <services>
        <service id="cmf_media.initializer" class="Doctrine\Bundle\PHPCRBundle\Initializer\GenericInitializer">
            <argument type="collection">
                <argument>%cmf_media.media_basepath%</argument>
            </argument>
            <tag name="doctrine_phpcr.initializer" />
        </service>

        <service id="cmf_media.download_controller" class="%cmf_media.download_controller.class%" >
            <argument type="service" id="doctrine_phpcr" />
            <argument>%cmf_media.manager_name%</argument>
            <argument/>
            <argument>/</argument>
        </service>

        <service id="cmf_media.templating.helper" class="%cmf_media.templating.helper.class%" public="false">
            <tag name="templating.helper" alias="cmf_media"/>
            <argument type="service" id="router"/>
        </service>
    </services>
</container>
