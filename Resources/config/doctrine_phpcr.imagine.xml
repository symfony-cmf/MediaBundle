<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="cmf_media.doctrine_phpcr.liip_imagine.data.loader.class">Symfony\Cmf\Bundle\MediaBundle\Adapter\LiipImagine\PhpcrCmfMediaDoctrineLoader</parameter>
        <parameter key="cmf_media.subscriber.imagine_cache_class">Symfony\Cmf\Bundle\MediaBundle\EventListener\PhpcrImagineCacheInvalidatorSubscriber</parameter>
    </parameters>

    <services>
        <service id="cmf_media.doctrine_phpcr.liip_imagine.data.loader" class="%cmf_media.doctrine_phpcr.liip_imagine.data.loader.class%">
            <tag name="liip_imagine.data.loader" loader="cmf_media_doctrine_phpcr" />
            <argument type="service" id="liip_imagine" />
            <argument type="service" id="doctrine_phpcr" />
            <argument>%cmf_media.manager_name%</argument>
            <argument>%cmf_media.image_class%</argument>
        </service>

        <service id="cmf_media.subscriber.imagine_cache" class="%cmf_media.subscriber.imagine_cache_class%">
            <tag name="%cmf_media.manager_registry%.event_subscriber"/>
            <argument type="service" id="liip_imagine.cache.manager"/>
            <argument type="service" id="service_container"/>
            <argument>%cmf_media.imagine.all_filters%</argument>
        </service>
    </services>
</container>
