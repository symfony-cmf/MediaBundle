{% block cmf_media_image_widget %}
    {{ form_widget(form) }}
    {% block cmf_media_image_widget_preview %}
        {% if form.vars.data and form.vars.data.id %}
            {% if imagine_filter %}
                <img src="{{ form.vars.data.id | imagine_filter( imagine_filter ) }}" alt="" />
            {% else %}
                <img src="{{ cmf_media_display_url(form.vars.data) }}" alt="" width="100" />
            {% endif %}
        {% endif %}
    {% endblock %}
{% endblock %}