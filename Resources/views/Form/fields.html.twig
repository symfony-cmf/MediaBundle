{% block cmf_media_image_widget %}
    {{ form_widget(form) }}
    {% block cmf_media_image_widget_preview %}
        {% if form.vars.data and form.vars.data.id and imagine_filter %}
            <img src="{{ form.vars.data.id | imagine_filter( imagine_filter ) }}" alt="" />
        {% endif %}
    {% endblock %}
{% endblock %}